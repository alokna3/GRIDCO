<body>
    <!-- Navigation Bar-->
    <!-- home start -->
    <section class="section bg-sub-page-home section1">

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 pt-3 page-next-level d-flex">
                    <img src="~/Login/images/APICOL-Logo.png" alt="" height="90" />

                    <div class="page-next text-light padtop">
                        <h4 class="">
                            ଓଡ଼ିଶା କୃଷି ପ୍ରୋତ୍ସାହନ ଏବଂ ପୁଞ୍ଜି ଲଗାଣ ନିଗମ ଲିଃ
                        </h4>
                        <h4 style="font-size: 18px;font-weight: 500;">
                            The Agricultural Promotion and Investment
                            Corporation of Odisha Limited (APICOL)
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- home end -->
    <!-- login page -->
    <section class="section" style="padding-top: 58px !important;
    background-image: url(../Login/images/bg.jpeg);
    background-attachment: fixed;
    position: relative !important;
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
    padding-bottom: 58px !important;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7"></div>
                <div class="col-md-5 ">
                    <form role="/Login/Login" class="intro-form" method="post">


                        <div class="form-group">
                            <label>User Name</label>

                            @Html.TextBoxFor(x => x.User_Name, new { @placeholder = "User Name/ଇଉଜର ନାମ", @class = "form-control", @required = "true", @autocomplete = "off" })
                            @if (TempData["warning"] != null)
                            {
                                <span class="text-danger" readonly>@TempData["warning"]</span>
                            }
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            @Html.TextBoxFor(x => x.Password, new { @placeholder = "Password/ପାସୱାର୍ଡ", @class = "form-control", @required = "true", @autocomplete = "off", @type = "password" })
                        </div>





                        <div class="form-group" style="margin-top: 5px; margin-bottom: 15px;display:flex">
                            <div style="background-image: url('../Login/images/download.jpg'); padding: 16px; width: 40%; height: 47px;" class="captcha_image">
                                <span id="captcha" style=" font-weight: 600;align-content:center; font-size: 23px; width: 40%;font-family: 'Syne Tactile', cursive; color: #ffff; ">@ViewBag.Captch</span>

                            </div>
                            &nbsp; &nbsp; &nbsp;
                            <div>
                                <i class="fa fa-refresh" style="font-size: 16px; margin-top: 14px;" onclick="CreateCaptcha()"></i>
                            </div>



                        </div>


                        <div class="form-group">

                            <input type="text" placeholder="Enter Captcha/କ୍ୟାପ୍ଚା" class="form-control" id="txtcaptch" required autocomplete="off">
                        </div>



                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                                        <label class="custom-control-label" for="customControlAutosizing">Remember me</label>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-md-5">
                                    <div class="pass-link"><a href="~/Login/ForgotPassword">Forgot password?</a></div>

                                </div>
                            </div>


                        </div>



                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-custom btn-block text-uppercase">Log in Now</button>
                        </div>
                        @*<div class="form-group text-center"> <a href="/Registration/Registration">Apply For Registration</a></div>*@
                    </form>
                </div>
            </div>

        </div>
    </section>
    <!-- login page end -->
    <!-- client slider -->
    <!-- client slider end-->
    <!-- Footer -->
    <section class="bg-dark footer" id="contact">
        <div class="container">
            <div class="row pt-5">
                <div class="col-lg-8">
